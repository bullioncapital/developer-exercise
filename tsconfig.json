{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "strictNullChecks": false,
        "sourceMap": true
    },
    "include": [
        "src",
    ],
    "paths": {
        "*": [
            "src/@types/*"
        ]
    },
    "typeRoots": [
        "./src/types",
        "src/@types/*"
    ],
    "exclude": [
        "./src/server/*",
        "src/App.ts",
        "src/AppRunner.ts",
        "**/*.spec.ts",
        "node_modules",
        "./specs"
    ]
}